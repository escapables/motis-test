{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MOTIS",
  "version": "0.1.0",
  "identifier": "com.motis.transit",
  "build": {
    "frontendDist": "../../ui/build",
    "devUrl": null,
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Lysande Linjetrafik",
        "width": 1400,
        "height": 900,
        "zoomHotkeysEnabled": false,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1000,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' motis: https://motis.localhost http://motis.localhost",
        "img-src": "'self' data: blob: motis: https://motis.localhost http://motis.localhost",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-eval'",
        "font-src": "'self' data:",
        "worker-src": "'self' blob:"
      }
    }
  },
  "bundle": {
    "active": false
  },
  "plugins": {}
}
